{
  "name": "@titan/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Titan AI Desktop - Electron wrapper with native capabilities",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "pack": "electron-builder --config electron-builder.config.js",
    "pack:win": "electron-builder --config electron-builder.config.js --win",
    "pack:mac": "electron-builder --config electron-builder.config.js --mac",
    "pack:linux": "electron-builder --config electron-builder.config.js --linux",
    "clean": "rimraf dist out"
  },
  "dependencies": {
    "chokidar": "^4.0.0",
    "electron-store": "^8.2.0",
    "fast-glob": "^3.3.0",
    "node-pty": "^1.0.0",
    "simple-git": "^3.31.1",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/turndown": "^5.0.5",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.3.0"
  }
}
