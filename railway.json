{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["apps/web/**"]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node apps/web/.next/standalone/apps/web/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
