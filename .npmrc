# Titan AI - npm/pnpm Configuration

# Use exact versions for reproducible builds
save-exact=true

# Hoist packages for compatibility with VS Code build
shamefully-hoist=true

# Strict peer dependencies
strict-peer-dependencies=false

# Auto-install peers
auto-install-peers=true

# Registry
registry=https://registry.npmjs.org/

# Scope configuration for @titan packages
@titan:registry=https://registry.npmjs.org/
